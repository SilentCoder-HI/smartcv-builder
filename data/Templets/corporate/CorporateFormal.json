{
    "templateId": "corporate-formal",
    "templateName": "Corporate Formal",
    "description": "A clean, formal corporate resume template with modern serif typography and subtle gray accents.",
    "templateType": "corporate",
    "version": "1.0",
    "plan": "free",
    "demo": true,
    "styles": {
        "root": {
            "backgroundColor": "white",
            "padding": "48px",
            "fontFamily": "serif",
            "color": "#374151",
            "width": "100%",
            "minHeight": "297mm",
            "maxWidth": "210mm",
            "margin": "0 auto",
            "border": "1px solid #d1d5db",
            "textAlign": "left"
